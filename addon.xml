<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.smarthomeservice"
       name="Kodi Smart Home Service"
       version="1.0.0"
       provider-name="njhsi">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
	<import addon="script.module.requests" version="2.12.4" />
  </requires>
  <extension point="xbmc.service" library="service.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <source>https://github.com/njhsi/kodiSmartHomeService</source>
    <platform>all</platform>
    <summary lang="en">Wake up smart TVs when Kodi is woken up, or have the TV sleep after a certain period of inactivity.</summary>
  </extension>
</addon>
